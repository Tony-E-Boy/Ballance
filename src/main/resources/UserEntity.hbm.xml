<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.UserEntity" table="user" schema="db">
        <property name="id">
            <column name="Id" sql-type="mediumtext" not-null="true"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(1000)" length="1000" not-null="true"/>
        </property>
        <property name="hex">
            <column name="hex" sql-type="varchar(10000)" length="10000" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(1000)" length="1000" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>